<style>
    /* CSS for the review form */
    .review-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        background-color: #f5f5f5;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
        margin-right: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="number"],
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        margin-top: 5px;
    }

    .error-messages {
        color: red;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

</style>

<%= form_with(model: review, class: 'review-form') do |form| %>
  <% if review.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :train_id, value: params[:train_id] %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="form-group">
    <%= form.label :feedback %>
    <%= form.text_area :feedback, rows: 4 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn-primary' %>
  </div>
<% end %>
